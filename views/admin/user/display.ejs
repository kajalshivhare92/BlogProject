<%- include('../../header.ejs') %>

    <section class="dashboard-wrap mtb-40" style="margin-top: 10rem;">
        <div class="container">
            <div class="body-content">
                <div class="row">
                    <div class="col-md-3">
                        <%- include('../blog/sidbar.ejs') %>
                    </div>
                    <div class="col-md-9">
                        <div class="dash-right">
                            <div class="dash-header">
                                <div class="dash-title">
                                    <h1>User Display</h1>
                                </div>

                            </div>
                            <table class="table table-bordered table-striped">
                                <tr>
                                    <th>#ID</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>phone</th>
                                    <th>Varified</th>
                                    <th>Comment</th>
                                    <th></th>

                                    <th>Action</th>
                                </tr>
                                <% i=1 %>
                                <% 
                                d=d.reverse();
                                d.forEach((item)=>{
                                    
                                    
                                    %>
                                    <tr>
                                        <td>
                                            <%= i++ %>
                                        </td>

                                        <td>
                                            <%= item.name %>
                                        </td>
                                        <td>
                                            <%= item.email %>
                                        </td>
                                        <td>
                                            <%= item.phone %>
                                        </td>

                                        <td>
                                            <%= item.is_Varified %>

                                        </td>
                                        <td>
                                            <form action="/update_approve/<%= item._id %>" method="post">
                                                <textarea name="comment"></textarea>
                                                <input type="hidden" name="name" value="<%= item.name %>">
                                                <input type="hidden" name="email" value="<%= item.email %>">
                                        </td>
                                        <td>
                                            <button type="submit" name="is_Varified"
                                                class="btn btn-info" value="Approved">Approved</button>
                                            <button type="submit" name="is_Varified"
                                                class="btn btn-danger" value="Reject">Reject</button>

                                            </form>
                                        </td>
                                        <td>
                                            <a href="/admin/userview/<%= item._id %>"
                                                class="btn btn-info btn-sm">view</a>
                                            <a href="/admin/useredit/<%= item._id %>"
                                                class="btn btn-info btn-sm">Edit</a>
                                            <a href="/admin/userdelete/<%= item._id %>"
                                                class="btn btn-info btn-sm">Delete</a>

                                        </td>
                                    </tr>
                                    <% }) %>


                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

